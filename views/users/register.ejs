<% layout('layouts/boilerplate') %>

<div class="container justify-content-center align-items-center mb-3">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow">
        <img src="https://res.cloudinary.com/dv5vm4sqh/image/upload/v1640878650/CampFire/campfire-cover_efr5mj.jpg"
            class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">Register</h5>

          <form action="/register" class="needs-validation" method="POST" novalidate>

            <div class="mb-3">
              <label class="form-label" for="username">Username: </label>
              <input class="form-control" type="text" id="username" name="username" required>
              <div class="valid-feedback">Looks Good!</div>
            </div>

            <div class="mb-3">
              <label class="form-label" for="email">Email: </label>
              <input class="form-control" type="email" id="email" name="email" required>
              <div class="valid-feedback">Looks Good!</div>
            </div>

            <div class="mb-3">
              <label class="form-label" for="password">Password: </label>
              <input class="form-control" type="password" id="password" name="password" required>
              <div class="valid-feedback">Looks Good!</div>
            </div>

            <div class="mb-3 d-grid gap-2"><button class="btn btn-success" type="submit">Register</button></div>

          </form>

        </div>
      </div>
    </div>
  </div>
</div>